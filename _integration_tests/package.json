{
  "name": "@process-engine/management_api_meta_integration_tests",
  "publishConfig": {
    "registry": "https://www.npmjs.com"
  },
  "version": "1.0.0",
  "description": "integration tests",
  "license": "MIT",
  "main": "index.js",
  "files": [
    "tests"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=sqlite CONFIG_PATH=config node index.js",
    "test-internal-sqlite": "cross-env NODE_ENV=sqlite CONFIG_PATH=config MANAGEMENT_API_ACCESS_TYPE=internal mocha -t 15000 test/**/*.js --exit",
    "test-external-sqlite": "cross-env NODE_ENV=sqlite CONFIG_PATH=config MANAGEMENT_API_ACCESS_TYPE=external mocha -t 15000 test/**/*.js --exit",
    "test-internal-postgres": "cross-env NODE_ENV=postgres CONFIG_PATH=config MANAGEMENT_API_ACCESS_TYPE=internal mocha -t 15000 test/**/*.js --exit",
    "test-external-postgres": "cross-env NODE_ENV=postgres CONFIG_PATH=config MANAGEMENT_API_ACCESS_TYPE=external mocha -t 15000 test/**/*.js --exit",
    "test-sqlite": "npm run test-internal-sqlite && npm run test-external-sqlite",
    "test-postgres": "npm run test-internal-postgres && npm run test-external-postgres",
    "test": "npm run test-sqlite",
    "test-all": "npm run test-sqlite && npm run test-postgres",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build-commonjs && npm run build-amd",
    "build-commonjs": "tsc",
    "build-amd": "tsc --module amd --outDir ./dist/amd",
    "lint": "eslint src/**/*.ts src/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts src/*.ts"
  },
  "dependencies": {
    "@essential-projects/bootstrapper": "~3.4.0",
    "@essential-projects/bootstrapper_node": "~3.3.0",
    "@essential-projects/event_aggregator": "~4.1.0",
    "@essential-projects/http": "~2.4.0",
    "@essential-projects/http_extension": "~6.7.0",
    "@essential-projects/timing": "~5.0.0",
    "@process-engine/iam": "~1.7.1",
    "@process-engine/logging_api_core": "~1.1.0",
    "@process-engine/logging.repository.file_system": "~1.3.0",
    "@process-engine/management_api_client": "~6.1.0",
    "@process-engine/management_api_core": "6.2.0-alpha.2",
    "@process-engine/management_api_http": "~5.1.0",
    "@process-engine/metrics_api_core": "~2.0.0",
    "@process-engine/metrics.repository.file_system": "~2.0.0",
    "@process-engine/process_engine_core": "12.12.0-alpha.3",
    "@process-engine/persistence_api.repositories.sequelize": "~1.0.0",
    "@process-engine/persistence_api.services": "~1.0.0",
    "@process-engine/persistence_api.use_cases": "~1.0.0",
    "addict-ioc": "~2.5.1",
    "bluebird": "~3.5.2",
    "loggerhythm": "~3.0.3",
    "jsonwebtoken": "~8.5.0",
    "moment": "~2.24.0",
    "mysql2": "~1.6.5",
    "node-uuid": "~1.4.8",
    "pg": "~7.12.0",
    "pg-hstore": "~2.3.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "~5.18.4",
    "sequelize-typescript": "next",
    "socket.io": "~2.2.0",
    "socket.io-client": "~2.2.0",
    "sqlite3": "~4.1.0",
    "tsconfig": "~7.0.0"
  },
  "devDependencies": {
    "@essential-projects/eslint-config": "^1.0.0",
    "@essential-projects/iam_contracts": "~3.6.0",
    "@process-engine/management_api_contracts": "13.0.0",
    "@types/bluebird": "^3.5.26",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.10",
    "@types/socket.io": "^2.1.0",
    "@types/socket.io-client": "^1.4.32",
    "@types/validator": "^10.11.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "mocha": "^5.2.0",
    "mocha-jenkins-reporter": "^0.4.1",
    "should": "^13.2.3",
    "typescript": "^3.1.6"
  }
}
